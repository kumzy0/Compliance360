     <!-- Create company Modal -->
    <div
      class="modal fade"
      id="createCompanyModal"
      tabindex="-1"
      aria-labelledby="createCompanyModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="createCompanyModalLabel">
              Create company profile
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body p-5">
              <div>
                  <h6 class="companyheadingm">Create company</h6>
                  <p class="companysubheadingm">Lorem ipsum dolor sit amet, consectetur adipor </p>
              </div>
              <form class="mt-3">
                   <h6 class="fw-bold">Company profile</h6>
                     <hr/>

                    <div class="mb-3">
                    <label for="companyaddress" class="form-label">Company address</label>
                    <input type="text" class="form-control" id="companyaddress">
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                             <div class="mb-3">
                                <label for="companyaddress" class="form-label">Type of company</label>
                                <input type="text" class="form-control" id="companyaddress">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label for="companyaddress" class="form-label">Incorporation date</label>
                                <input type="date" class="form-control" id="companyaddress">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                             <div class="mb-3">
                                <label for="companyaddress" class="form-label">Cac Id</label>
                                <input type="text" class="form-control" id="companyaddress">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label for="companyaddress" class="form-label">Incorporation document</label>
                                <input type="file" class="form-control" id="companyaddress">
                            </div>
                        </div>
                         <div class="col-lg-6">
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Set yearly reminder for filling</label>
                              </div>
                        </div>
                    </div>
                    
                     <h6 class="fw-bold">Contact person</h6>
                    <hr/>

                    <div class="row">
                        <div class="col-lg-6">
                             <div class="mb-3">
                                <label for="companyaddress" class="form-label">First name</label>
                                <input type="text" class="form-control" id="companyaddress">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label for="companyaddress" class="form-label">Last name</label>
                                <input type="date" class="form-control" id="companyaddress">
                            </div>
                        </div>
                          <div class="col-lg-6">
                            <div class="mb-3">
                                <label for="companyaddress" class="form-label">Phone number</label>
                                <input type="date" class="form-control" id="companyaddress">
                            </div>
                        </div>
                    </div>
                     <div class="modal-footer">
           
                        <button type="button" class="btn btn-primary"><i data-feather="save"></i> Add company</button>
                      </div>
              </form>
